# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/aware_agent
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# WebSocket
WS_HOST=0.0.0.0
WS_PORT=8000
WS_MAX_CONNECTIONS=1000

# Monitoring
MONITORING_PORT=8001
METRICS_PATH=/metrics
HEALTH_PATH=/health

# Security
AUTH_SECRET=your-secret-key
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60

# Backup
BACKUP_DIR=backups
BACKUP_INTERVAL=86400
BACKUP_RETENTION=7

# Load Balancer
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_HOST=
LOAD_BALANCER_PORT=80

# SSL
SSL_ENABLED=false
SSL_CERT=
SSL_KEY=

# Scaling
MIN_INSTANCES=1
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=0.8
SCALE_DOWN_THRESHOLD=0.2

# AWS
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
ALARM_ACTION_ARN=your-alarm-action-arn 